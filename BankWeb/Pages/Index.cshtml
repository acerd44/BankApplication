@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center justify-content-center">
    <div class="container" data-aos="fade-up">

        <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="150">
            <div class="col-xl-6 col-lg-8">
                <h1>steve jobs<span>.</span></h1>
                <h2>We are team of talented digital marketers</h2>
            </div>
        </div>

        <div class="row gy-4 mt-5 justify-content-center" data-aos="fade-up" data-aos-delay="250">
            <div class="col-xl-2 col-md-4">
                <div class="icon-box">
                    <i class="ri-store-line"></i>
                    <h3><a href="">Lorem Ipsum</a></h3>
                </div>
            </div>
            <div class="col-xl-2 col-md-4">
                <div class="icon-box">
                    <i class="ri-bar-chart-box-line"></i>
                    <h3><a href="">Dolor Sitema</a></h3>
                </div>
            </div>
            <div class="col-xl-2 col-md-4">
                <div class="icon-box">
                    <i class="ri-calendar-todo-line"></i>
                    <h3><a href="">Sedare Perspiciatis</a></h3>
                </div>
            </div>
            <div class="col-xl-2 col-md-4">
                <div class="icon-box">
                    <i class="ri-paint-brush-line"></i>
                    <h3><a href="">Magni Dolores</a></h3>
                </div>
            </div>
            <div class="col-xl-2 col-md-4">
                <div class="icon-box">
                    <i class="ri-database-2-line"></i>
                    <h3><a href="">Nemos Enimade</a></h3>
                </div>
            </div>
        </div>
        <div class="row gy-4 mt-5 justify-content-center" data-aos="fade-up" data-aos-delay="1500">
            <div class="col-xl-3 col-md-5">
                <div class="icon-box">
                    <h3><a>Amount of customers:<br /> @Model.Customers</a></h3>
                </div>
            </div>
            <div class="col-xl-3 col-md-5">
                <div class="icon-box">
                    <h3><a>Amount of accounts:<br /> @Model.Accounts</a></h3>
                </div>
            </div>
            <div class="col-xl-4 col-md-6">
                <div class="icon-box">
                    <h3><a>Balance sum of all accounts:<br /> SEK @Model.BalanceSum.ToString("0.00")</a></h3>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Hero -->