@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}
<h1 class="mb-4 text-center"><a class="logo">PBank.</a></h1>

<h2 class="logo text-dark text-center">Click any of the four countries to see their top 10 customers!</h2>
<div class="row text-white justify-content-center">
    @foreach (var country in Model.CountryStatistics)
    {
        <partial name="_CountryCustomerStatisticPartial" model="@country" />
    }
</div>

<div class="row text-white justify-content-center">
    @foreach (var country in Model.CountryStatistics)
    {
        <partial name="_CountryAccountStatisticPartial" model="@country" />
    }
</div>

<div class="row text-white justify-content-center">
    @foreach (var country in Model.CountryStatistics)
    {
        <partial name="_CountryBalanceStatisticPartial" model="@country" />
    }
</div>
